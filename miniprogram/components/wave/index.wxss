  padding: 10px;
}
.wave {
  background: darkturquoise;
  position: relative;
  overflow: hidden;
}

.wave:before {
  content: '';
  width: 300px;
  height: 300px;
  background: rgba(255,255,255,0.8);
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%, -60%);
  border-radius: 40%;
  animation: wave 5s linear infinite;
}
.wave:after {
  content: '记一笔';
  text-transform: uppercase;
  color: rgb(1, 59, 60);
  position: absolute;
  left: 50%;
  top: 0px;
  z-index: 99;
  transform: translate(-50%, 30px);
}
@keyframes wave {
  100% {
    transform: translate(-50%,-60%) rotate(360deg);
  }
}

